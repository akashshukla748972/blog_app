        <li class="nav-item">
          <a class="nav-link" href="/users/signup">Create Account</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/signin">Sign In</a>
        </li>

        <% } %>
      </ul>
    </div>
  </div>
